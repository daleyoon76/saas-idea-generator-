generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Idea {
  id              String   @id @default(cuid())
  userId          String   @map("user_id")
  keyword         String?
  localId         Int      @map("local_id")
  name            String
  category        String
  oneLiner        String   @map("one_liner")
  target          String
  problem         String
  features        String[]
  differentiation String
  revenueModel    String   @map("revenue_model")
  mvpDifficulty   String   @map("mvp_difficulty")
  rationale       String
  preset          String?
  createdAt       DateTime @default(now()) @map("created_at")

  businessPlans BusinessPlan[]
  prds          PRD[]

  @@index([userId, createdAt(sort: Desc)])
  @@map("ideas")
}

model BusinessPlan {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  ideaId    String   @map("idea_id")
  ideaName  String   @map("idea_name")
  content   String
  version   String   @default("draft")
  createdAt DateTime @default(now()) @map("created_at")

  idea Idea @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@index([ideaId])
  @@map("business_plans")
}

model PRD {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  ideaId    String   @map("idea_id")
  ideaName  String   @map("idea_name")
  content   String
  createdAt DateTime @default(now()) @map("created_at")

  idea Idea @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@index([ideaId])
  @@map("prds")
}
